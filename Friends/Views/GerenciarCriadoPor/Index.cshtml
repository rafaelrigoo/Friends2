@model IEnumerable<CriadoPor>

    <a class="btn btn-primary" asp-controller="GerenciarCriadoPor" asp-action="EditarCriadoPor">Adicionar novo</a>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome Real</th>
                <th>Data de Nascimento</th>
                <th>Nacionalidade</th>
                <th>Estado Civil</th>
                <th>Quantidade de Filhos</th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artista in Model)
            {
                <tr>
                    <td>@artista.NomeReal</td>
                    <td>@artista.DatadeNascimento.ToString("dd/MM/yyyy")</td>
                    <td>@artista.Nacionalidade</td>
                    <td>@artista.EstadoCivil</td>
                    <td>@artista.QuantidadedeFilhos</td>
                    <td>
                        <a class="btn btn-secondary" asp-controller="GerenciarCriadoPor" asp-action="EditarCriadoPor" asp-route-Id="@artista.Id">Editar</a>
                        <a class="btn btn-danger" asp-action="Excluir">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
