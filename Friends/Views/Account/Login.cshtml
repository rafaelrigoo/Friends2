@model LoginViewModel

<div class="container d-flex justify-content-center align-items-center vh-100">
    <form class="form-row w-50 bg-light p-3 rounded border" role="row" asp-action="Login">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group col-12">
            <label asp-for="Username">E-mail</label>
            <input class="form-control" asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group col-12">
            <label asp-for="Password">Senha</label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group col-12">
            <button class="btn btn-primary">Acessar</button>
        </div>
    </form>
</div>
    <p>
        <a class="faca-seu-cadastro" asp-action="NovoCadastro">Novo Usuario</a>
    </p>
    <div>
        <img class="imagem-login" src="~/imagens/tituloparaLogin.jpg" />
    </div>
